<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/fotor_text_typeface_category_item_width"
    android:layout_height="wrap_content"   
    android:gravity="center" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/fotor_text_typeface_category_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fotor_transparent"
            android:padding="0dp" />

        <ImageButton
            android:id="@+id/fotor_text_typeface_category_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="4dp"
            android:background="@drawable/fotor_transparent"
            android:src="@drawable/fotor_text_lock"
            android:padding="0dp" />
    </LinearLayout>

</FrameLayout>