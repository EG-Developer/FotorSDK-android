<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <FrameLayout
        android:id="@+id/fotor_text_typeface_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/fotor_text_typeface_item_height" >

        <TextView
            android:id="@+id/fotor_text_typeface_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"           
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/fotor_text_typeface_item_textsize" />
        <ImageView 
            android:id="@+id/fotor_text_typeface_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scaleType="centerInside"/>
    </FrameLayout>

</FrameLayout>