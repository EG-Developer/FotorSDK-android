<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fotor="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal" >

        <com.everimaging.fotorsdk.widget.FotorNavigationButton
            android:id="@+id/fotor_text_add_button"
            android:layout_width="?attr/fotorNavigationBtnWidth"
            android:layout_height="match_parent"
            android:background="@drawable/fotor_transparent"
            android:minHeight="?attr/fotorMainBottomHeight"
            android:minWidth="?attr/fotorNavigationBtnWidth"
            android:src="@drawable/fotor_text_add_button"
            android:visibility="invisible"
            fotor:fotorNavigationBtn_text="@string/fotor_text_add_btn" />
    </LinearLayout>

    <include
        android:id="@+id/fotor_texts_category_loading_container"
        layout="@layout/fotor_feature_operation_loading_component" />

</FrameLayout>